body
  background-image url(bg.png)

ul, menu, dir
  display block
  list-style-type disc
  -webkit-margin-before 1em
  -webkit-margin-after 1em
  -webkit-margin-start 0px
  -webkit-margin-end 0px
  -webkit-padding-start 40px

li
  list-style none

a
  color #363636
  text-decoration none

.avatar
  width 60px
  height 60px
  background url(thumb2.png)
  border-radius 50%
  box-shadow 0 0 0 4px white, 0 0 4px 4px #eee
  overflow hidden
  display block
  position absolute
  top 15px
  left 200px
  -webkit-animation fadein .5s

.top-nav-title
  margin-left 150px

.top-bar-brand
  position relative

@-webkit-keyframes fadein
  0%
    -webkit-transform scale(0)

  50%
    -webkit-transform scale(1.5)

  100%
    -webkit-transform scale(1)

.dh_minglu
  margin 20px 10px
  text-align center
  font-size 0
  li
    display inline-block
    vertical-align top
    font-size 12px
    position relative
    margin 0 1px 1px 0
    width 280px
    padding 10px
    background-color rgb(0,0,0,0.2);
    color #fff
    text-align left
    a
      font-size 18px
      color #fff
      cite
        display block
        margin-top 5px
        line-height 20px
        height 60px
        overflow hidden
        font-size 12px
    &:hover
      background-color #788F8B



